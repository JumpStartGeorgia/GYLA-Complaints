<%- model_class = DecForm -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal dl-show dl-show-dec">
  <dt><strong><%= model_class.human_attribute_name(:dec_total_complaints) %></strong></dt>
  <dd><%= @dec_form.dec_total_complaints %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dec_journal_registration_yes_no) %></strong></dt>
  
  <% if @dec_form.dec_journal_registration_yes_no %>
      <dd>დიახ</dd>
  <% else %>
      <dd>არა</dd>
  <% end %>    
  <dt><strong><%= model_class.human_attribute_name(:ped_entered_with_law) %></strong></dt>  
  <% if @dec_form.ped_entered_with_law %>
      <dd>დიახ</dd>
  <% else %>
      <dd>არა</dd>
  <% end %>
  
  <dt><strong class="dec-sub"><%= model_class.human_attribute_name(:lonked_election_lists) %>:</strong></dt>      
  <% if @dec_form.lonked_election_lists %>
      <dd>დიახ</dd>
  <% else %>
      <dd>არა</dd>
  <% end %>
  
  <dt><strong class="dec-sub"><%= model_class.human_attribute_name(:complaints) %>:</strong></dt>
  <% if @dec_form.complaints %>
      <dd>დიახ</dd>
  <% else %>
      <dd>არა</dd>
  <% end %>
  
  
  <dt><strong class="dec-sub"><%= model_class.human_attribute_name(:get_send_act) %></strong></dt>
  <% if @dec_form.get_send_act %>
      <dd>დიახ</dd>
  <% else %>
      <dd>არა</dd>
  <% end %>
  
  
  <dt><strong class="dec-sub"><%= model_class.human_attribute_name(:describe_extra_env) %>:</strong></dt>
  <dd><%= @dec_form.describe_extra_env %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:was_canonical_procedures_done) %>:</strong></dt>
  <% if @dec_form.was_canonical_procedures_done === 1 %>
      <dd>დიახ</dd>
  <% elsif @dec_form.was_canonical_procedures_done === 2 %>
      <dd>ნაწილობრივ</dd>
  <% else %>
      <dd>არა</dd>
  <% end %>
  
  
  <dt><strong class="dec-sub"><%= model_class.human_attribute_name(:where_props_filled) %>:</strong></dt>
  <% if @dec_form.where_props_filled %>
      <dd>დიახ</dd>
  <% else %>
      <dd>არა</dd>
  <% end %>
  
  
  <dt><strong class="dec-sub"><%= model_class.human_attribute_name(:precinct_results_canel_proc) %>:</strong></dt>
  <% if @dec_form.precinct_results_canel_proc %>
      <dd>დიახ</dd>
  <% else %>
      <dd>არა</dd>
  <% end %>
  
  <dt><strong class="dec-sub"><%= model_class.human_attribute_name(:commission_summary_report_publicity) %>:</strong></dt>
  <% if @dec_form.commission_summary_report_publicity %>
      <dd>დიახ</dd>
  <% else %>
      <dd>არა</dd>
  <% end %>
  
  <dt><strong class="dec-sub"><%= model_class.human_attribute_name(:extra_env_describe) %>:</strong></dt>
  <dd><%= @dec_form.extra_env_describe %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:summed_up_or_not_summary_reports) %>:</strong></dt>
  <% if @dec_form.summed_up_or_not_summary_reports %>
      <dd>დიახ</dd>
  <% else %>
      <dd>არა</dd>
  <% end %>
</dl>



<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              dec_forms_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_dec_form_path(@dec_form), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              dec_form_path(@dec_form),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>


