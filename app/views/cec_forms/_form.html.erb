<%= nested_form_for @cec_form, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :cesko_summary_report_input, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :cesko_summary_report_input, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :if_not_precinct_name_and_num, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :if_not_precinct_name_and_num, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cesko_election_summary_after_one_day, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :cesko_election_summary_after_one_day, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :if_not_after_one_day_precinct_name_num, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :if_not_after_one_day_precinct_name_num, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cesko_report_web_translition, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :cesko_report_web_translition, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :if_not_the_reason, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :if_not_the_reason, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cesko_summary_process_transparently, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :cesko_summary_process_transparently, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description_how_transparent, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description_how_transparent, :class => 'text_area' %>
    </div>
  </div>
  
  <%= f.fields_for :cec_form_children %>
  <p><%= f.link_to_add "Add", :cec_form_children %></p>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cec_forms_path, :class => 'btn' %>
  </div>
<% end %>
