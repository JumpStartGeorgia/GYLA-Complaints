<%- model_class = PecForm -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>


<div class="show_page clear">
	<div class="row">
	  <div class="header span3">
			<%= model_class.human_attribute_name(:election_district_number) %>
		</div>
	  <div class="content span6">
			<%= @pec_form.district_name %>
		</div>
	</div>
	<div class="row">
	  <div class="header span3">
			<%= model_class.human_attribute_name(:election_precinct_number) %>
		</div>
	  <div class="content span6">
			<%= @pec_form.election_precinct_number %>
		</div>
	</div>
	<div class="row">
	  <div class="header span3">
			<%= model_class.human_attribute_name(:observer_name) %>
		</div>
	  <div class="content span6">
			<%= @pec_form.observer_name %>
		</div>
	</div>
	<div class="row">
	  <div class="header span3">
			<%= model_class.human_attribute_name(:current_number_of_complaints) %>
		</div>
	  <div class="content span6">
			<%= @pec_form.current_number_of_complaints %>
		</div>
	</div>
	<div class="row">
	  <div class="header span3">
			<%= model_class.human_attribute_name(:complaint_author) %>
		</div>
	  <div class="content span6">
			<%= @pec_form.complaint_author %>
		</div>
	</div>
	<% if @pec_form.registered_or_not_complaint %>
		<div class="row">
			<div class="header span3">
				<%= model_class.human_attribute_name(:registered_or_not_complaint) %>
			</div>
			<div class="content span6">
				<%= t('form.radio_buttons.do_yes') %>
			</div>
		</div>
		<div class="row">
			<div class="header span3">
				რეგისტრაციის დრო
			</div>
			<div class="content span6">
				<%= @pec_form.registration_time %>
			</div>
		</div>
	<% else %>
		<div class="row">
			<div class="header span3">
				<%= model_class.human_attribute_name(:registered_or_not_complaint) %>
			</div>
			<div class="content span6">
				<%= t('form.radio_buttons.do_no') %>
			</div>
		</div>
		<div class="row">
			<div class="header span3">
				აპირებდა თუ არა მომჩივანი გასაჩივრებას ზემდგომ საოლქო საარჩევნო კომისიაში?
			</div>
			<div class="content span6">
			 <% if @pec_form.do_you_give_complaint_to_higher_commission %>
			    <%= t('form.radio_buttons.do_yes') %>
			 <% elsif !@pec_form.do_you_give_complaint_to_higher_commission.nil? %>
			    <%= t('form.radio_buttons.do_no') %>
			 <% end %>
			</div>
		</div>
	<% end %>
	<div class="row">
	  <div class="header span3">
			<%= model_class.human_attribute_name(:violation_essence) %>
		</div>
	  <div class="content span6">
			<%= @pec_form.violation_essence %>
		</div>
	</div>
	<div class="row">
	  <div class="header span3">
			<%= model_class.human_attribute_name(:request) %>
		</div>
	  <div class="content span6">
			<%= @pec_form.request %>
		</div>
	</div>
	<div class="row">
	  <div class="header span3">
			<%= model_class.human_attribute_name(:was_complaint_setisfied) %>
		</div>
	  <div class="content span6">
			<% if @pec_form.was_complaint_setisfied %>
				 <%= t('form.radio_buttons.do_yes') %>
			<% elsif !@pec_form.was_complaint_setisfied.nil? %>
				 <%= t('form.radio_buttons.do_no') %>
			<% end %>
		</div>
	</div>
	<div class="row">
	  <div class="header span3">
			<%= model_class.human_attribute_name(:other_extra_comments) %>
		</div>
	  <div class="content span6">
			<%= @pec_form.other_extra_comments %>
		</div>
	</div>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              pec_forms_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pec_form_path(@pec_form), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pec_form_path(@pec_form),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
