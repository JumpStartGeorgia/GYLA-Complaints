<%- model_class = Complaint -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:observer_name) %></th>
      <th><%= model_class.human_attribute_name(:observer_address) %></th>
      <th><%= model_class.human_attribute_name(:observer_phone) %></th>
      <th><%= model_class.human_attribute_name(:election_district_name) %></th>
      <th><%= model_class.human_attribute_name(:election_precinct_number) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:violation_type) %></th>
      <th><%= model_class.human_attribute_name(:violation_time) %></th>
      <th><%= model_class.human_attribute_name(:witness) %></th>
      <th><%= model_class.human_attribute_name(:violator_info) %></th>
      <th><%= model_class.human_attribute_name(:other_info) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:complaint_author_name) %></th>
      <th><%= model_class.human_attribute_name(:complaint_author_phone) %></th>
      <th><%= model_class.human_attribute_name(:court_name) %></th>
      <th><%= model_class.human_attribute_name(:complaint_writing_time) %></th>
      <th><%= model_class.human_attribute_name(:request_in_complaint) %></th>
      <th><%= model_class.human_attribute_name(:response_date) %></th>
      <th><%= model_class.human_attribute_name(:complaint_result) %></th>
      <th><%= model_class.human_attribute_name(:additional_comment) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @complaints.each do |complaint| %>
      <tr>
        <td><%= link_to complaint.id, complaint_path(complaint) %></td>
        <td><%= complaint.observer_name %></td>
        <td><%= complaint.observer_address %></td>
        <td><%= complaint.observer_phone %></td>
        <td><%= complaint.election_district_name %></td>
        <td><%= complaint.election_precinct_number %></td>
        <td><%= complaint.category %></td>
        <td><%= complaint.violation_type %></td>
        <td><%= complaint.violation_time %></td>
        <td><%= complaint.witness %></td>
        <td><%= complaint.violator_info %></td>
        <td><%= complaint.other_info %></td>
        <td><%= complaint.status %></td>
        <td><%= complaint.complaint_author_name %></td>
        <td><%= complaint.complaint_author_phone %></td>
        <td><%= complaint.court_name %></td>
        <td><%= complaint.complaint_writing_time %></td>
        <td><%= complaint.request_in_complaint %></td>
        <td><%= complaint.response_date %></td>
        <td><%= complaint.complaint_result %></td>
        <td><%= complaint.additional_comment %></td>
        <td><%=l complaint.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_complaint_path(complaint), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      complaint_path(complaint),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_complaint_path,
            :class => 'btn btn-primary' %>
